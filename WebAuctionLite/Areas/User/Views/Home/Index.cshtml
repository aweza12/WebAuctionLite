@model ApplicationUser
@{
    string strTitle = "Кабинет пользователя";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div class="div-box">
        <h3>Редактировать страницы сайта</h3>
        <a asp-area="User" asp-controller="Lots" asp-action="Index" asp-route-codeWord="PageIndex">Лоты</a>
        <a asp-area="User" asp-controller="Products" asp-action="Index">Товары</a>
        <a asp-area="User" asp-controller="Bids" asp-action="Index" asp-route-codeWord="PageContacts">Ставки</a>
        <a asp-area="User" asp-controller="ApplicationUser" asp-action="Index">Настройки аккаунта</a>
        <br />
        <br />
        <h4>
            Ваш баланс: @Model.MoneyAccount
        </h4>
        @*<script type="text/jscript">
            function AddMoney() {
                $.get("/ApplicationUser/AddMoney");
            };
        </script>*@
        <a asp-area="User" asp-controller="ApplicationUser" asp-action="AddMoney">Пополнить на 100</a>
        @*<input type="button" value="Create" onclick="location.href='@Url.Action("Create", "User")'" />*@
        @*<input type="button" value="Пополнить на 100" onclick="AddMoney()" />*@
        <a asp-area="User" asp-controller="ApplicationUser" asp-action="Index">Вывести 100</a>
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>
