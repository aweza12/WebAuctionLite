@*@using WebAuctionLite.Areas.User.Models*@
@model ApplicationUser
@{
    string strTitle = "Настройки аккаунта";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="User" asp-controller="ApplicationUser" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>

            <div class="div-box">
                <label asp-for="UserName">UserName</label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="div-box">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="div-box">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="div-box">
                <label asp-for="Email"></label>
                <textarea asp-for="Email"></textarea>
                <span asp-validation-for="Email"></span>
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>
